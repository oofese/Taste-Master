@page
@using Taste.Utility


@if (User.IsInRole(SD.ManagerRole))
{
    <div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Menü Ürünleri</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-warning"><i class="fas fa-plus"></i> &nbsp; Oluştur</a>
        </div>
    </div>
    <br /><br />
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Adı</th>
                <th>Fiyatı</th>
                <th>Kategorisi</th>
                <th>Ürün Tipi</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
}
else{
    <div>
        <h1 class="text-danger"> Başarısız</h1>
    </div>
}
@section Scripts{
    <script src="~/js/menuItem.js"></script>
}

